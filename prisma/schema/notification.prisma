model Notification {
  id        String   @id @default(uuid())
  title     String
  message   String
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  isRead    Boolean  @default(false)
  type      String   // "INFO", "WARNING", "CRITICAL"
  createdAt DateTime @default(now())

  @@map("notifications")
}
